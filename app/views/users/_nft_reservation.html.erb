<div class="container m-3">
  <div class="">
    <% @user.reservations.each do |reservation| %>
        <div class="">
          <%= link_to "#{reservation.nft.name.capitalize}", nft_path(reservation.nft) %>
          <div>
            <%= reservation.starting_date %>
            <%= reservation.ending_date %>
          </div>
          <%= link_to "Edit", edit_reservation_path(reservation), class: '' %>
          <%= link_to "Delete", reservation_path(reservation, { redirect_to: user_path(current_user) }),
            method: :delete, data: { confirm: "Are you sure you want to cancel this reservation?"}, class: '' %>
        </div>
    <% end %>
  </div>
</div>