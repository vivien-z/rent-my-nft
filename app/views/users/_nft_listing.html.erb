<div class="container m-3">
  <div class="">
    <% @user.nfts.each do |nft| %>
        <div class="">
          <% if nft.image.attached?%>
            <div class="" style="background-image: linear-gradient(rgba(0,0,0,0.3),
              rgba(0,0,0,0.3)), url('<%= cl_image_path nft.image.key, width: 200, crop: :fill %>')">
              <%= link_to "#{nft.name.capitalize}", nft_path(nft) %>
            </div>
          <% else  %>
            <div class="" style="background-image: linear-gradient(rgba(0,0,0,0.3),
              rgba(0,0,0,0.3)), url('https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg')">
              <%= link_to "#{nft.name.capitalize}", nft_path(nft) %>
            </div>
          <% end %>
          <%= link_to "Edit", edit_nft_path(nft), class: 'card-description-profile' %>
          <%= link_to "Delete", nft_path(nft, { redirect_to: user_path(current_user) }),
            method: :delete, data: { confirm: "Are you sure?"}, class: 'card-description-profile' %>
        </div>
    <% end %>
  </div>
</div>