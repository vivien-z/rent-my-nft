<div>
  <%= form_tag nfts_path, method: :get, class: "d-flex justify-content-center" do %>
      <%= text_field_tag :search,
        params[:search],
        class: "w-50 mr-3 form-control",
        placeholder: "Search by name"
      %>
      <%= submit_tag "Search", class: "btn btn-dark" %>
  <% end %>
</div>

<div class="d-flex">
  <div class="bar-option">
    Filter
    <%= form_tag nfts_path, method: :get, class: "d-flex justify-content-center" do %>
      <%= text_field_tag :price_min, params.dig(:price, :min), name: 'price[min]', class: "w-50 mr-3 form-control", placeholder: "Min..." %>
      <%= text_field_tag :price_max, params.dig(:price, :max), name: 'price[max]', class: "w-50 mr-3 form-control", placeholder: "Max..." %>
      <%= submit_tag "Search", class: "btn btn-dark" %>
    <% end %>
    <%= form_tag nfts_path, method: :get do %>
      <div class="form-group row">
        <div class="col-6">
          <%= label_tag :min_price %>
          <%= text_field_tag :min_price, params.dig(:price, :min), name: 'price[min]', class: 'form-control' %>
        </div>

        <div class="col-6">
          <%= label_tag :max_price %>
          <%= text_field_tag :max_price, params.dig(:price, :max), name: 'price[max]', class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= submit_tag 'Search', class: 'btn btn-dark' %>
        <%= link_to 'Clear', nfts_path, class: 'btn btn-link' %>
      </div>
    <% end %>
  </div>
  <div class="bar-option">
    Sort
    <div>
      <%= link_to "Name", sort: :name, order: :ASC %>
      <%= link_to "Latest", sort: :created_at, order: :DESC %>
      <%= link_to "Price Increase", sort: :price, order: :ASC %>
      <%= link_to "Price Decrease", sort: :price, order: :DESC %>
    </div>
  </div>

  <div class="bar-option">Map toggle</div>
</div>
