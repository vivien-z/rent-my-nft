<div id="editReservationModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Edit NFT Reservation</h5>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
          <div class="d-flex">
            <%= cl_image_tag reservation.nft.image.key, height: 80, width: 80, crop: :fill %>
            <div>NFT: <%= reservation.nft.name.capitalize %></div>
          </div>
          <%= simple_form_for (reservation) do |f| %>
            <div class="form-row">
              <div class="col">
                <%= f.input :starting_date, as: :string, required: false, input_html: {id: "start_date"} %>
              </div>
              <div class="col">
                <%= f.input :ending_date, as: :string, required: false, input_html: {id: "end_date"} %>
              </div>
            </div>
            <div class="form-row">
              <%= f.button :submit, "Update", class: "btn btn-dark" %>
            </div>
          <% end %>
        </div>
      </div>

    </div>
  </div>