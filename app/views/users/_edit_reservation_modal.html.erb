<div id="editReservationModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Edit NFT Reservation: <strong><%= reservation.nft.name.capitalize %></strong></h5>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body px-5">
          <%= simple_form_for (reservation) do |f| %>
              <%= f.input :starting_date, as: :string, required: false, input_html: {id: "start_date"} %>
              <%= f.input :ending_date, as: :string, required: false, input_html: {id: "end_date"} %>
              <%= f.button :submit, "Update", class: "btn btn-dark" %>
          <% end %>
        </div>
      </div>

    </div>
  </div>