<div class="container">
  <div class="row justify-content-center my-5"><h2>My Profile</h2></div>
</div>

<div class="container">
  <div class="row mb-3"><h4>My NFT Listings</h4></div>
  <div class="row d-flex justify-content-between">
    <% if @user.nfts.count > 0 %>
      <%= render 'my_nft_list' %>
    <% else %>
      <%= link_to "+ NFT", new_nft_path, class: "" %>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row my-3"><h4>My Reservations</h4></div>
  <div class="row d-flex flex-column">
    <% if @user.reservations.count > 0 %>
      <%= render 'nft_reservation' %>
    <% else %>
      <%= link_to nfts_path, class: "text-link-dk" do %>
        <i class="fas fa-arrow-right"></i> Explore
      <% end %>
    <% end %>
  </div>
</div>